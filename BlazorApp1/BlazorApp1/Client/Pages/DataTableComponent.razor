@inject NavigationManager UriHelper

<button @onclick="() => AddProduct()" class="btn btn-primary" style="float:right">Add Item</button>
<br />
<br />

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Details</th>
            <th>Product Price</th>
            <th>Manage Product</th>
        </tr>
    </thead>
    <tbody>


        @foreach (Product product in products)
        {
            <DataTableItemComponent product="product"></DataTableItemComponent>
        }




    </tbody>
    <tfoot>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Details</th>
            <th>Product Price</th>
            <th>Manage Product</th>
        </tr>
    </tfoot>
</table>

@code {

    List<Product> products = new List<Product>
{
        new Product(1,"Prod1","Details",2.5),
        new Product(2,"Prod2","Details",2.3),
        new Product(3,"Prod3","Details",5.1),
        new Product(3,"Prod3","Details",5.1),
        new Product(3,"Prod3","Details",5.1),

    };

    void AddProduct()
    {
        UriHelper.NavigateTo("/AddProduct");
    }

}
