        @foreach (Product product in products)
        {
            <DataTableItemComponent product="product"></DataTableItemComponent>
        }




    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start date</th>
            <th>Salary</th>
        </tr>
    </tfoot>
</table>

