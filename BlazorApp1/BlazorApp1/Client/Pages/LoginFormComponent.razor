@inject HttpClient Http

<form class="form-signin">

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" @bind="@email" class="form-control" placeholder="Email address" required autofocus>
    <br />
    <label for="inputPassword" class="sr-only">Password</label>

    <input type="password" id="inputPassword" @bind="@password" class="form-control" placeholder="Password" required>
    <br />
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <button @onclick="login" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

</form>

@code {

    public string email;
    public string password;
    public Vendor vendor = new Vendor();

    protected async Task checkLogin()
    {
        vendor = await Http.GetFromJsonAsync<Vendor>($"api/Vendor/email/{email}");
    }

    public void login()
    {
        var vendor = new Vendor { email = email, password = password };


    }
}
